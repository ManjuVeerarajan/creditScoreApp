<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xmlns:pro="http://www.liquibase.org/xml/ns/pro"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
		http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">

	<changeSet author="manjuv" id="july-19-cr-40"
		runOnChange="true">
		<sqlFile dbms="mysql" path="/db/changelog/liquibaseTest.sql"
			endDelimiter=";;" />
	</changeSet>

	<changeSet author="manjuv" id="july-19-refNoTable"
		runOnChange="true">
		<sqlFile dbms="mysql"
			path="/db/changelog/creditchecker_pdffiles_tabl.sql"
			endDelimiter=";;" />
	</changeSet>

	<changeSet author="manjuv" id="insert-example"
		runOnChange="true">
		<preConditions onFail="MARK_RAN">
			<sqlCheck expectedResult="0">
				SELECT COUNT(*) FROM
				creditchecker_pdffiles WHERE name='angkasa' OR
				name='ccris_general.xsl' OR name='data.xml' OR name='error.xsl' OR
				name='ExperianLogo.png' OR name='ExperianReport.html'
				OR
				name='general.xsl' OR name='iriss.xsl' OR name='quick_purchase.xsl'
				OR name='spga_general.xsl' OR name='spkccs.xsl' OR name='xslt2.css';
			</sqlCheck>
		</preConditions>
		<sqlFile dbms="mysql"
			path="/db/changelog/creditchecker_pdffiles_insert.sql" />
	</changeSet>

	<changeSet author="manjuv"
		id="dropTable-application_settings">
		<preConditions onFail="MARK_RAN">
			<tableExists tableName="application_settings" />
		</preConditions>
		<dropTable tableName="application_settings" />
	</changeSet>

	<changeSet author="manjuv" id="appSettings_to_sysConfig"
		runOnChange="true">
		<preConditions onFail="MARK_RAN">
			<sqlCheck expectedResult="0">
				SELECT COUNT(*) FROM
				creditchecker_sysconfig WHERE name='experian-trigger-time' OR
				name='experian-trigger-count' OR name='daysExpire';
			</sqlCheck>
		</preConditions>
		<sqlFile dbms="mysql"
			path="/db/changelog/app_settings_to_syconfig.sql" />
	</changeSet>
	<changeSet author="manjuv" id="nameConstants_to_sysConfig"
		runOnChange="true">
		<preConditions onFail="MARK_RAN">
			<sqlCheck expectedResult="0">
				SELECT COUNT(*) FROM
				creditchecker_sysconfig WHERE name='name-constants';
			</sqlCheck>
		</preConditions>
		<sqlFile dbms="mysql"
			path="/db/changelog/nameConstantsToSysConfig.sql" />
	</changeSet>
	
	<changeSet author="manjuv"
		id="alter_creditChecker_settings">
		<sqlFile dbms="mysql"
			path="/db/changelog/alterSysConfigTable.sql" />
	</changeSet>
	
	<changeSet author="manjuv"
		id="insert_logenabling_creditChecker_settings">
		<sqlFile dbms="mysql"
			path="/db/changelog/sysconfig-logenabling-insert.sql" />
	</changeSet>
	
	<changeSet author="manjuv" id="mailGunProps"
		runOnChange="true">
		<preConditions onFail="MARK_RAN">
			<sqlCheck expectedResult="0">
				SELECT COUNT(*) FROM
				creditchecker_sysconfig WHERE name='platform.email.mailgun.MAIL_DRIVER' OR
				name='platform.email.mailgun.MAILGUN_DOMAIN' OR name='platform.email.mailgun.MAILGUN_HOST' OR name='platform.email.mailgun.MAILGUN_SECRET'
				OR name ='platform.email.mailgun.MAILGUN_FROM' OR name='platform.email.notification.experian_fail';
			</sqlCheck>
		</preConditions>
		<sqlFile dbms="mysql"
			path="/db/changelog/mailGunProps.sql" />
	</changeSet>
	<changeSet author="manjuv"
		id="creditReportError-addColumn-XmlString">
		<sqlFile dbms="mysql"
			path="/db/changelog/creditReportError.sql" />
	</changeSet>
	<changeSet author="manjuv"
		id="ccLogAddNewColumns">
		<sqlFile dbms="mysql"
			path="/db/changelog/ccLogAddColumns.sql" />
	</changeSet>
	<changeSet author="manjuv"
		id="ccLogAlterColumns">
